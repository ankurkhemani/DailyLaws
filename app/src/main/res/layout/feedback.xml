<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="#F6F0E9"
    >



    <TextView
        android:id="@+id/tv1"
        android:text="Love the app? Give us 5 stars!"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#9B866D"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/stars"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/tv1"
        android:src="@drawable/stars"/>

    <Button
        android:id="@+id/rate"
        android:text="RATE NOW"
        android:background="@drawable/custom_done"
        android:textColor="#F6F0E9"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_below="@+id/stars"
        android:textStyle="bold"
        android:layout_marginBottom="5sp"
        android:layout_height="50dp" />




        <TextView
            android:id="@+id/tv2"
            android:text="How can we improve?"
            android:textIsSelectable="true"
            android:padding="5sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rate"
            android:textColor="#9B866D"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:id="@+id/rl1">
        <Button
            android:id="@+id/suggestions"
            android:text="GIVE SUGGESTIONS"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="#9B866D"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

    </RelativeLayout>


        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/rl2">
            <Button
                android:id="@+id/done"
                android:text="DONE"
                android:background="@android:color/transparent"
                android:textColor="@color/year"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>


</RelativeLayout>
